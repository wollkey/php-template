# Application
APP_ENV=dev
APP_DEBUG=true
APP_SECRET=change-me-to-random-string

# Docker ports
HTTP_PORT=8000
HTTPS_PORT=8443
DB_PORT=5432
REDIS_PORT=6379

# Database
DB_NAME=app_db
DB_USER=app
DB_PASSWORD=secret
DATABASE_URL=postgresql://app:secret@postgres:5432/app_db

# Redis
REDIS_URL=redis://redis:6379

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=daily

# Session
SESSION_LIFETIME=3600
SESSION_DRIVER=redis
